{
  "name": "prisma-fastify-template",
  "version": "1.0.0",
  "description": "A simple Prisma + Fastify template.",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "server.ts",
  "scripts": {
    "dev": "npx prisma generate && tsnd --respawn --transpile-only --exit-child server.ts",
    "server": "tsnd --respawn --transpile-only --exit-child server.ts",
    "build": "npx prisma generate && tsc",
    "start": "npm run build && node dist/server.js",
    "prisma:generate": "prisma generate",
    "migrate:dev": "prisma migrate dev --name init",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/jwt": "^10.0.0",
    "bcrypt": "^6.0.0",
    "fastify": "^5.5.0",
    "pg": "^8.16.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.2.1",
    "prisma": "^6.14.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
